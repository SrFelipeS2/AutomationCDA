@page
@model AutomationCDA.App.Webapp.ListaTodosLosVehiculosModel
@{
}
 <head>
  <link rel="stylesheet" href="~/css/customVehiculos.css"/>
  </head>
<body class="fs-4">
        <div class="container col-12">
            <h1 class="text-center  mt-5 mb-3">Vehiculos</h1>
            <div class="row row-cols-auto d-flex justify-content-center">
                <div class="col">
                    <a class="colorcustom" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                        aria-controls="offcanvasExample">
                        Menu
                    </a>
                </div>
                <div class="col">
                    <p>/</p>
                </div>
                <div class="col">
                    <a class="colorcustom" aria-current="page">
                        Consultar Vehiculos
                    </a>
                </div>
            </div>
            <div class="offcanvas offcanvas-start colorcustom" tabindex="-1" id="offcanvasExample"
                aria-labelledby="offcanvasExampleLabel">
                <div class="offcanvas-header border-white border-bottom">
                    <h5 class="offcanvas-title  " id="offcanvasExampleLabel">Menu</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="offcanvas-body border-bottom ">
                    <div class="d-grid gap-3 col-10 mx-auto ">
                        
                        </a>
                        <a href="./AgregarVehiculos" class="btn  colotbtncustom text-center border-bottom shadow-lg p-3">
                            <span class="material-icons  d-inline">
                                settings
                            </span>
                            <h3 class="d-inline">
                                Registrar Vehiculo
                            </h3>
                        </a>
                    
                        <a href="../index.html"
                            class=" btn btn-danger colorcustom text-center border-bottom shadow-lg p-3">
                            <span class="material-icons  d-inline">
                                headset_mic
                            </span>
                            <h3 class="d-inline">
                                Cerrar Sesion
                            </h3>
                        </a>

                    </div>
                </div>
            </div>
                <table class="table row d-flex justify-content-center">
                    <thead>
                        <tr>
                        <th class="text-center" >Id.</th>
                        <th class="text-center" >Placa.</th>
                        <th class="text-center" >Modelo.</th>
                        <th class="text-center" >Marca.</th>
                        <th class="text-center" >C. P.</th>
                        <th class="text-center" >C. M.</th>
                        <th class="text-center" >Tipo V.</th>
                        <th>Obs</th>
                        <th class="text-center">Estado S.</th>
                        <th class="text-center">Acciones.</th>
                   
                    </thead>
                    <tbody>
                        @foreach (var vehiculo in Model.listaVehiculos)
                        {
                        <tr>
                            <td class="text-center">@vehiculo.Id</td>
                            <td class="text-center">@vehiculo.Placa</td>
                            <td class="text-center">@vehiculo.Modelo</td>
                            <td class="text-center">@vehiculo.Marca</td>
                            <td class="text-center">@vehiculo.CapacidadPasajeros</td>
                            <td class="text-center">@vehiculo.CilindradaMotor</td>
                            <td class="text-center">@vehiculo.TipoVehiculo</td>
                            <td>@vehiculo.Observaciones</td>
                            <td class="text-center">@vehiculo.EstadoSoat</td>
                            
                            <td>
                            <a class="btn btn-primary table-tn" asp-page="./ActualizarVehiculos" asp-route-Id ="@vehiculo.Id"> 
                            <i class="far fa-edit"></i> 
                            Actualizar
                            </a> 
                            <a class="btn btn-danger table-tn" asp-page="./EliminarVehiculos" asp-route-Id ="@vehiculo.Id"> 
                            <i class="far fa-edit"></i> 
                            Eliminar
                            </a> 
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
           
        </div>
    <script src="../js/bootstrap.min.js"></script>
    <script src="js/ocultar.js"></script>

</body>