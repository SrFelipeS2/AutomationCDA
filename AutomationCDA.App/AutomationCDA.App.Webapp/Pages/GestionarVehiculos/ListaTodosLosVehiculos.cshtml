@* MODAL ACTUALIZAR *@

<div class="modal" tabindex="-1" id="modalActualizar">
  <div class="modal-dialog" style="max-width: 800px!important;">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Actualizar Vehiculo</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <div class="container">
  <div class="row">
        
    <div class="col-12 col-md-12">
      <h1 class="text-center mt-5 mb-5">Actualizar Vehiculo </h1>
      <form class="row g-3 mt-2 mb-5" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="id" class="id">

                <input type="hidden" name="id" id="id" class="id">
                    
                <div class="col-12  mb-3">
                    <div class="input-group">
                        <span class="input-group-text">Placa: </span>
                        <input class="form-control placa" type="text" placeholder="Ingrese la placa" id="placa" name="placa" required>
                    </div>
                </div>
                <div class="col-12  mb-3">
                    <div class="input-group">
                        <span class="input-group-text">Modelo: </span>
                        <input class="form-control modelo" type="number" id="modelo" name="modelo" min="1" max="1000" placeholder="Ingrese el modelo" required >
                    </div>
                </div>
                <div class="col-12  mb-3">
                    <div class="input-group">
                        <span class="input-group-text">Marca: </span>
                        <input class="form-control marca"  type="text" aria-label="With textarea" id="marca" name="marca" placeholder="Ingrese la marca" required>
                    </div>
                </div>
                <div class="col-12  mb-3">
                    <div class="input-group">
                        <span class="input-group-text">Capacidad pasajeros: </span>
                        <input class="form-control capacidadPasajeros"  type="number" aria-label="With textarea" id="capacidadPasajeros" name="capacidadPasajeros" placeholder="Ingrese la capacidad pasajeros" required>
                    </div>
                </div>
                <div class="col-12  mb-3">
                    <div class="input-group">
                        <span class="input-group-text">Cilindrada: </span>
                        <input class="form-control cilindradaMotor"  type="number" aria-label="With textarea" id="cilindradaMotor" name="cilindradaMotor" placeholder="Ingrese la cilindrada" required>
                    </div>
                </div>
                <div class="col-12  mb-3">
                    <div class="input-group">
                        <span class="input-group-text">Tipo Vehiculo: </span>
                        <input class="form-control tipoVehiculo"  type="number" aria-label="With textarea" id="tipoVehiculo" name="tipoVehiculo" placeholder="Ingrese el tipo vehiculo" required>
                    </div>
                </div>
                <div class="col-12  mb-3">
                <div class="input-group">
                    <span class="input-group-text">Estado Soat: </span>
                    <select id="estadoSoat" class="form-select border border-primary estadoSoat"
                      name="estadoSoat" required>
                     <option>Seleccione...</option>
                      <option value="1">Activo</option>
                      <option value="2">Vencido</option>
                    </select>
                </div>
            </div>
            <input type="hidden" name="id" id="id" class="id">
      </form>
    </div>
  
  </div>
</div>
    </div>
    <div class="modal-footer">
      <div class="text-center d-grid mx-auto col-6 mb-5">
        <button type="button" class="btn btn-primary mb-2 btn-actualizar">Actualizar</button>
      </div>
    </div>
  </div>
  </div>
</div>


