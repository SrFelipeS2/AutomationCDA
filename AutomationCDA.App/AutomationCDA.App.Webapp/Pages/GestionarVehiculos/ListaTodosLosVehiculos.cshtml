                        <tr>
                            <td class="text-center ids">@vehiculo.Id</td>
                            <td class="text-center placas">@vehiculo.Placa</td>
                            <td class="text-center modelos">@vehiculo.Modelo</td>
                            <td class="text-center marcas">@vehiculo.Marca</td>
                            <td class="text-center capacidad">@vehiculo.CapacidadPasajeros</td>
                            <td class="text-center cilindraje">@vehiculo.CilindradaMotor</td>
