@page
@model AutomationCDA.App.Webapp.AgregarPersonasModel
@{
}
<head>
<link rel="stylesheet" href="~/css/customPersonas.css"/>
</head>

<body class="fs-4">
    
        <div class="container col-12">
            <div class="row">
                <div class="col-lg-12 mt-2 ">
                    <h1 class="text-center mb-3 mt-5">Registrarse</h1>
                    <div class="row row-cols-auto d-flex justify-content-center">
                        <a class="colorcustom text-center" data-bs-toggle="offcanvas" href="#offcanvasExample"
                            role="button" aria-controls="offcanvasExample">
                            Menu
                        </a>
                        <p>/</p>
                        <a class="colorcustom" aria-current="page">
                            Registrarse
                        </a>
                    </div>
                    <div class="offcanvas offcanvas-start colorcustom" tabindex="-1" id="offcanvasExample"
                        aria-labelledby="offcanvasExampleLabel">
                        <div class="offcanvas-header border-white border-bottom">
                            <h5 class="offcanvas-title  " id="offcanvasExampleLabel">Menu</h5>
                            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                                aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body border-bottom">
                            <div class="d-grid gap-3 col-10 mx-auto  ">

                                <a href="./ListaTodasLasPersonas"
                                    class="customheigt btn btn-info colorcustom text-center border-bottom shadow-lg p-3 d-inline">
                                    <span class="material-icons d-felx">
                                        info 
                                    </span>
                                    <h3 class="d-inline">
                                        Listado Personas
                                    </h3>
                                </a>

                                <a href="./ListaTodasLasPersonas" class=" btn btn-warning colorcustom text-center border-bottom shadow-lg p-3">
                                    <span class="material-icons  d-inline">
                                        headset_mic 
                                    </span>
                                    <h3 class="d-inline">
                                        Cerrar Sesion
                                    </h3>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-12" ">
                    </div>
    
                    <div class=" col-md-8 col-12" ">
                        <form action="" method="POST">
                        <div class="form-grow  mb-3">
                            <label for="cedula">Cédula </label>
                            <input type="text" class="form-control" id="cedula" name="cedula"
                                placeholder="Digite su cédula" minlegth="5" maxlegth="50">
                        </div>
                        <div class="form-grow  mb-3">
                            <label for="nombre">Nombre </label>
                            <input type="text" class="form-control" id="nombre" name="nombre"
                                placeholder="Digite su nombre" minlegth="5" maxlegth="50">
                        </div>
                        <div class="form-grow mb-3">
                            <label for="apellidos">Apellidos </label>
                            <input type="text" class="form-control" id="apellidos" name="apellidos"
                                placeholder="Digite su apellido" minlegth="5" maxlegth="50">
                        </div>
                        <div class="form-grow mb-3">
                            <label for="telefono">Teléfono </label>
                            <input type="numer" class="form-control" id="telefono" name="telefono"
                                placeholder="Digite su teléfono" minlegth="5" maxlegth="50">
                        </div>
                        <div class="form-grow mb-3">
                            <label for="correo">Correo Electrónico </label>
                            <input type="email" class="form-control" id="correo" name="correo"
                                placeholder="Digite su correo electrónico" minlegth="5" maxlegth="50">
                        </div>
                        <div class="form-grow  mb-3">
                            <label for="direccion">Dirección de Residencia </label>
                            <input type="text" class="form-control" id="direccion" name="direccion"
                                placeholder="Digite su dirección de residencia" minlegth="5" maxlegth="50">
                        </div>
                        <div class="form-group  mb-3">
                            <label for="nivelestudios">Nivel Estudios</label>
                            <select class="form-control" id="nivelestudios" name="nivelestudios">
                                <option value="" selected="selected">Seleccione....</option>
                                <option>Primaria</option>
                                <option>Secundaria</option>
                                <option>Pregrado</option>
                                <option>Postgrado</option>
                                <option>Maestría</option>
                            </select>
                        </div>
                        <div class="col-12 mx-auto text-center">
                            <button type="submit" class="btn   mb-5 btn-primary mb-2">Registrar</button>
                        </div>
                        <div class="col-12 mx-auto text-center">
                            <button type="reset" class="btn   mb-5 btn-primary mb-2">Limpiar Formulario</button>
                        </div>

                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>
   
    <script src="../js/bootstrap.min.js"></script>
</body>